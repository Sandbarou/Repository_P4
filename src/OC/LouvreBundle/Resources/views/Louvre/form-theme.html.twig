        <label><input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} /> Tarif r√©duit</label>
    </div>
    <hr style="background-color: black; height: 1px; border: 0;"/>
{% endblock checkbox_widget %}




