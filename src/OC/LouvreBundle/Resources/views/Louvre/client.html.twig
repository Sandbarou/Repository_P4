    </div>    
        

{{ form_end(form) }}    

</div> 


{% endblock %}    
    
{% block body %}     
    
<a href="{{ path('oc_louvre_ticket') }}" class="col-sm-2 btn btn-primary">Retour</a>  
<span class="col-sm-6"></span>     

{# Render CSRF token etc .#}
<div style="display:none">
    {{ form_rest(form) }}
</div>

<input id="bouton" type="submit" class="col-sm-4 btn btn-primary" value="Paiement">
    
{% endblock %}



